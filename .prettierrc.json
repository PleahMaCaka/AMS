{
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": false,
  "semi": false,
  "singleQuote": false,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": [
        "*.json",
        "*.config.js",
        "*.config.ts"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "parser": "typescript"
}